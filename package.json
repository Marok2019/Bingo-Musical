{
  "name": "bingo-musical",
  "version": "1.0.0",
  "description": "Aplicaci√≥n para gestionar bingos musicales",
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.bingomusical.app",
    "productName": "Bingo Musical",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns",
      "category": "public.app-category.entertainment"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "AudioVideo"
    }
  },
  "keywords": [
    "bingo",
    "music",
    "game",
    "electron"
  ],
  "author": "m4r0k",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "better-sqlite3": "^9.2.0",
    "electron": "^28.0.0",
    "node-fetch": "^2.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.0",
    "youtube-search-api": "^2.0.1",
    "ytdl-core": "^4.11.5"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron-builder": "^24.9.0",
    "electron-devtools-installer": "^3.2.0",
    "vite": "^5.0.0",
    "wait-on": "^9.0.1"
  }
}